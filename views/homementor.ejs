<% include partials/appheader %>

<body>
    
<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <a class="navbar-brand" href="#">Dashboard</a>
      <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
          </li>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Contact Us</a>
          </li>
        </ul>
        <a class="nav-link" href="/logout">Logout</a>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
          <ul class="nav nav-pills flex-column">
            <li class="nav-item">
              <a class="nav-link active" href="#">Applications<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Mentors</a>
            </li>
          </ul>
        </nav>

        <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">
          <h1>Home Mentor Status</h1>
          <p>Use this to let us know if you can take students this year. 
          <% if (user.opt === 1) {%>
                <span class="badge badge-pill badge-secondary">Currently accepting students</span>
              <% } else if (user.opt ===2) { %>  
                <span class="badge badge-pill badge-secondary">Not currently accepting students</span>
              <% } %> 
          </p>
          
          
          
          <form action="/homementor/<%=user._id%>?_method=PUT" method="POST">
              <div class="container">
                    <div class="form-row"></div>
                       <div class="form-group col-6">
                          <div class="form-check">
                            <label class="form-check-label">
                              <input class="form-check-input" type="radio" name="user[opt]" value="1" checked>
                              I can take students this year.
                            </label>
                          </div>
                          <div class="form-check">
                            <label class="form-check-label">
                              <input class="form-check-input" type="radio" name="user[opt]"  value="2">
                              I can't take students this year.
                            </label>
                          </div>
                      </div>
                      <div class="form-group col-4">
                          <input type="number" name="user[mentees]" class="form-control" placeholder="How many students?">
                      </div>
                    </div>
                    <button type="submit" class="btn btn-primary random">
                      Submit
                    </button>
                    <div class="container wspace">
                    </div>
              </div>
          </form>
        </main>
        
      </div>
    </div>
    

<% include partials/footer %>